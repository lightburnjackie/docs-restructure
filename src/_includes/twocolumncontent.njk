<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="{{ '/css/output.css' | url }}">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <title>Restructure Example</title>

</head>

<body>
    {% include "partials/header.njk" %}

    <main>
        <div class="container">

            <div class="row row-cols-1 row-cols-lg-2">
                <div id="sidebar" class="col col-lg-3">
                    <h1>{{ title }}</h1>
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#">Breadcrumbs</a></li>
                        <li class="breadcrumb-item"><a href="#">for</a></li>
                        <li class="breadcrumb-item active">Navigation</li>
                    </ul>
                    <img src="https://via.placeholder.com/500x300?text=featured+image" alt="" class="img-fluid">
                    
                    

                    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-1 gap-1 gap-lg-3">
                        {% if tags %}
                        <div class="col d-flex flex-lg-column gap-1">
                            <h5 class="me-2">Tags</h5>
                            <div class="d-flex flex-wrap gap-2">

                                {% for tag in tags %}
                                <a href="#"><span class="badge text-bg-primary">{{ tag }}</span></a>
                                {% endfor %}
                            </div>
                        </div>
                        {% endif %}

                        {% if compatibility %}
                        <div class="col d-flex flex-lg-column gap-1">
                            <h5 class="me-2">Compatibility</h5>
                            <div class="d-flex flex-wrap gap-2">

                                {% for item in compatibility %}
                                <a href="#"><span class="badge text-bg-primary">{{ item }}</span></a>
                                {% endfor %}
                            </div>
                        </div>
                        {% endif %}

                        {% if difficulty %}
                        <div class="col d-flex flex-lg-column gap-1">
                            <h5 class="me-2">Difficulty</h5>
                            <a href="#"><span class="badge text-bg-primary">{{ difficulty }}</span></a>
                        </div>
                        {% endif %}

                        {% if contentType %}
                        <div class="col d-flex flex-lg-column gap-1">
                            <h5 class="me-2">Content Type</h5>
                            <a href="#"><span class="badge text-bg-primary">{{ contentType }}</span></a>
                        </div>
                        {% endif %}
                    </div>
                </div>
                <div id="content" class="col col-lg-9">
                    <!-- {% sizeIndicator %} -->
                    {{ content | safe }}
                </div>
            </div>
        </div>

    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
        crossorigin="anonymous"></script>
</body>

</html>